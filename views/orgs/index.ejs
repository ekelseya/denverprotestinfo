<%- include("../partials/header") %>

<div class="container">
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h2>Credible Groups Leading Marches and Protests</h2>
        </div>
        <% organization.forEach(function(organization) { %>
            <% if (organization.credible) { %>
                <div class="card col-sm-6 col-md-4 col-lg-3 m-2 pt-2">
                    <img class="card-img-top" src="<%= organization.image %>" alt="Organization image">
                    <div class="card-body">
                        <h3 class="card-title"><%= organization.name%></h3>
                    </div>
                    <a href="/groups/<%= organization._id %>" class="btn btn-secondary mb-2">More Info</a>
                </div>
            <% } %>
        <% }); %>
        <div class="col-lg-12">
            <h2>Less Than Credible Organizations</h2>
        </div>
        <% organization.forEach(function(organization) { %>
            <% if (!organization.credible) { %>
                <div class="card col-sm-6 col-md-4 col-lg-3 m-2 pt-2">
                    <img class="card-img-top" src="<%= organization.image %>" alt="Campground image">
                    <div class="card-body">
                        <h3 class="card-title"><%= organization.name%></h3>
                    </div>
                    <a href="/groups/<%= organization._id %>" class="btn btn-secondary mb-2">More Info</a>
                </div>
            <% } %>
        <% }); %>
    </div>

</div>

<%- include("../partials/footer") %>