<%- include("../partials/header") %>
<div class="container">
    <div style="width: 60%; margin: 0 auto">
        <div class="row">
            <h1 class="mx-3 my-4">Add a New Protest Group</h1>
        </div>
        <form action="/groups" method="post">
<!--            TODO: refactor as an object -->
            <div class="form-group">
                <label for="name">Organization Name</label>
                <input type="text"
                       class="form-control"
                       id="name" name="name"
                       placeholder="Enter the organization name">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text"
                       class="form-control"
                       id="image" name="image"
                       placeholder="Add a URL for the image">
            </div>
            <div class="form-group">
                <label for="description">Add a description of the organization</label>
                <textarea class="form-control"
                          id="description"
                          name="description"
                          aria-describedby="descriptionHelp"
                          placeholder="Describe the organization"
                          rows="5"></textarea>
                <small id="descriptionHelp" class="form-text text-muted">
                    Who created the organization? What is their mission? How can they be contacted?
                    This form supports HTML markup.
                </small>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" name="credible" id="credible">
                <label class="form-check-label" for="credible">
                    Is this a credible organization?
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-secondary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/groups">Return to all protest groups</a>
    </div>
</div>
<%- include("../partials/footer") %>